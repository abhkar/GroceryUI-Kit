<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".search_categoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <View
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/txt"
            android:layout_height="3dp"
            android:layout_margin="3dp"
            android:layout_centerVertical="true"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop By Category"
            android:layout_centerHorizontal="true"
            android:textColor="#CE3131"
            android:layout_centerVertical="true"
            android:textSize="23dp"
            android:textStyle="bold" />


        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_margin="3dp"
            android:layout_toRightOf="@+id/txt"
            android:layout_centerVertical="true"
            android:background="?android:attr/listDivider" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:layout_margin="7dp"
                        android:foreground="@drawable/design_shadow"
                        android:scaleType="fitXY"
                        android:clickable="true"
                        android:background="@drawable/ripple"
                        android:src="@drawable/vegetable" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Vegetable"
                        android:textColor="#fff"
                        android:textSize="21dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:layout_margin="7dp"
                        android:foreground="@drawable/design_shadow"
                        android:scaleType="fitXY"
                        android:src="@drawable/fruit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Fresh Fruits"
                        android:textColor="#fff"
                        android:textSize="21dp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:layout_margin="7dp"
                        android:foreground="@drawable/design_shadow"
                        android:scaleType="fitXY"
                        android:src="@drawable/fruit2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Bakery"
                        android:textColor="#fff"
                        android:textSize="21dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:layout_margin="7dp"
                        android:foreground="@drawable/design_shadow"
                        android:scaleType="fitXY"
                        android:src="@drawable/fruit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Meat,Fish  Egg"
                        android:textColor="#fff"
                        android:textSize="21dp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:layout_margin="7dp"
                        android:foreground="@drawable/design_shadow"
                        android:scaleType="fitXY"
                        android:src="@drawable/gro1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="7dp"
                        android:text="Cleaning ware"
                        android:textColor="#fff"
                        android:textSize="21dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:layout_margin="7dp"
                        android:foreground="@drawable/design_shadow"
                        android:scaleType="fitXY"
                        android:src="@drawable/fruit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Beauty Hygine"
                        android:textColor="#fff"
                        android:textSize="21dp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:layout_margin="7dp"
                        android:foreground="@drawable/design_shadow"
                        android:scaleType="fitXY"
                        android:src="@drawable/gro1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="BabyCare"
                        android:textColor="#fff"
                        android:textSize="21dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:layout_margin="7dp"
                        android:foreground="@drawable/design_shadow"
                        android:scaleType="fitXY"
                        android:src="@drawable/fruit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Pet Food"
                        android:textColor="#fff"
                        android:textSize="21dp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>




    </ScrollView>


</LinearLayout>